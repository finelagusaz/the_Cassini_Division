	}
	elseif reference[2] == "Last"
	{
		//---- 最後のページ
		"\1\s[10]\0\b2\s[0]%reference[0]ヘッドライン、これが最後ね。"
	}
	--
	//---- ヘッドライン本体
	"\n\n%reference[3]\n\n"
	--
	//---- 選択肢
	if reference[2] == "First" || reference[2] == "Next"
	{
		//---- 次のページがある場合
		"\q0[][次のページ]/
		\q1[%reference[1]][サイトへ]/
		\q2[HEADLINECANCEL][やめ]\e"
	}
	else
	{
		//---- 次のページがない場合
		"\q0[%reference[1]][サイトへ]/
		\q1[HEADLINECANCEL][やめ]\e"
	}
}

